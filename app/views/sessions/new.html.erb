<div class="container">
  <h1 class="headings">
    <center>
      Log In
    </center>
  </h1>

  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus:true %><br>
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %><br>
      <%= f.submit("Log in", class: "btn btn-primary") %><br>
  <% end %>
  <br>
  <%= link_to "(Cancel)", articles_path %>
    </div>
</div>