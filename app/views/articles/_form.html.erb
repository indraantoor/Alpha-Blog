<div class="container">
<% if @article.errors.any? %>
    <h2>Error Occured</h2>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
<% end %>
<div class="row">
    <div class="col-md-12">
        <%= form_for @article do |f| %>
            <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus:true %><br>
                    <%= f.label :description %>
                    <%= f.text_area :description, class: "form-control", placeholder: "Body of the article" %><br>
                    <%= f.submit class: "btn btn-primary" %><br>
        <% end %>
        <br>
        <%= link_to "(Cancel)", articles_path %>
             </div>
    </div>
</div>
</div>