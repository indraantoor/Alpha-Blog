<div class="container">
	<%= render 'shared/errors', obj: @article %>
	<div class="row">
		<div class="col-md-12">
			<%= form_for @article do |f| %>
				<div class="form-group">
					<%= f.label :title %>
					<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus:true %><br>
					<%= f.label :description %>
					<%= f.text_area :description, class: "form-control", placeholder: "Body of the article" %><br>
					<div class="row">
						<div class="col-sm-offset-2 col-sm-8">
						<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
							<% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>	
						<% end %>
						</div>
					</div>
					<%= f.submit class: "btn btn-primary" %><br>
			<% end %>
			<br>
			<%= link_to "(Cancel)", articles_path %>
				</div>
		</div>
	</div>
</div>