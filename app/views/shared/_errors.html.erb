<% if obj.errors.any? %>
	<div class="alert alert-danger" role="alert">
		<div class="panel-heading">
			<h4 class="panel-title"><%= pluralize(obj.errors.count, "Error") %> Occured</h4>
				<ul>
					<% obj.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
		</div>
	</div>
<% end %>