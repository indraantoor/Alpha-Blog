<div class="container">
  <h1 class="headings">
    <center>
      Create New Category
    </center>
  </h1>

  <%= render 'shared/errors', obj: @category %>
    
    <%= form_for @category do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus:true %><br>
        <%= f.submit class: "btn btn-primary" %><br>
    <% end %>
    <br>
    <%= link_to "(Cancel)", articles_path %>
      </div>
</div>