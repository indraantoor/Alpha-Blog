<div class="container">
  <h1 class="headings">
    <center>
      Listing All Categories
    </center>
  </h1>
  <div class="d-flex justify-content-center">
		<%= will_paginate %>
	</div>
  <% @categories.each do |category| %>
    <ul class="listing">
      <center>
        <div class="card">
          <div class="card-body">
            <h3 class="card-title"><%= link_to "#{category.name}", category_path(category) %></h3>
            <small>
              <%= pluralize(category.articles.count, "article") %>
            </small>
          </div>
        </div>
      </center>
    </ul>
  <% end %>
  <div class="d-flex justify-content-center">
		<%= will_paginate %>
	</div>
</div>